<div id="message_edit_<%= message.id %>" class="edit-message-container" >
  <div class="header-edit">
    <span class="icon-close" data-chat-target="closeEditBtn">
      <i class="fa-solid fa-xmark" data-message-id="<%= message.id %>" data-action="click->chat#openOverlay"></i>
    </span>
  </div>
  <%= form_with model: @message,
                url: user_message_path(user_id: params[:user_id], id: message.id),
                method: :put,
                class: "message-form-container",
                data: {action: "submit->chat#updateMessage", message_id: "#{message.id}"} do |form| %>
    <%= form.text_field :content,
                        value: message.content,
                        name: 'content',
                        placeholder: "Chat here...",
                        class: "message-form-input",
                        id: "edit_input_#{message.id}",
                        data: {chat_target: 'textinputEdit'}
    %>
    <%= form.submit "Edit", class: "comment-button message-form-submit" %>
  <% end %>
</div>
